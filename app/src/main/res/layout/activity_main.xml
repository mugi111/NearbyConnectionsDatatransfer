<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/codename" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.082" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/opponent_name" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="25dp" android:id="@+id/status"
            app:layout_constraintTop_toBottomOf="@+id/opponent_name"
            app:layout_constraintBottom_toTopOf="@+id/opponent_find" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Find"
            android:layout_width="130dp"
            android:layout_height="53dp" android:id="@+id/opponent_find"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opponent_name" app:layout_constraintVertical_bias="0.812"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" style="@style/Widget.AppCompat.Button.Colored"/>

</android.support.constraint.ConstraintLayout>